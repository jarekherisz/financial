<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {{- encore_entry_link_tags('app') }}
    {% include 'stylesheet.html.twig' %}
    {% include 'script.html.twig' %}
    {%- block stylesheets %}{%~ endblock %}

</head>
<body class="d-flex flex-column h-100 bg-light">

<header>
    {% block header %}

        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="/images/logo_menu.png">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">

                </div>
            </div>
        </nav>

    {% endblock %}
</header>





{% block main %}
    <main class="{% block main_class %}container"{% endblock %}>
        <div class="card">
            {% block top_main %}
                <div class="card-header d-flex">
                    <div class="">{% block main_icon %}{% endblock %}{{ block('title') }}</div>
                    <div class="flex-grow-1 d-flex justify-content-end">
                        <div>{% block title_right %}{% endblock %}</div>
                    </div>

                </div>
            {% endblock %}
            <div class="card-body">
                {% block content %}{% endblock %}
            </div>
        </div>
    </main>
{% endblock %}


{% block footer %}
    <footer class="footer mt-auto py-2 bg-light">
        <div class="container-fluid">
            <span class="text-muted">© Mistal 2023</span>
        </div>
    </footer>
{% endblock %}

{{ encore_entry_script_tags('app') }}
{% block javascripts %}<script></script>{% endblock %}
</body>
</html>
